= form_for @cart_item do |f|
  - if @cart_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cart_item.errors.count, "error")} prohibited this cart_item from being saved:"
      %ul
        - @cart_item.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :cart
    = f.text_field :cart
  .field
    = f.label :product
    = f.text_field :product
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
